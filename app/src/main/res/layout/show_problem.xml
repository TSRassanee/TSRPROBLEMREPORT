<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgproduct"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_below="@+id/btnbuy"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:src="@drawable/success" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="25dp"
        android:text="ชื่อสินค้า"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/txtprice"
        android:layout_alignStart="@+id/txtprice"
        android:text="coffee"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/link_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="18dp"
        android:text="รายละเอียด"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtprice"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/link_login"
        android:layout_alignBottom="@+id/link_login"
        android:layout_alignLeft="@+id/txt_cnumber"
        android:layout_alignStart="@+id/txt_cnumber"
        android:text="0"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Buy"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtname_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgproduct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="นาย อัสนี แหวนหล่อ" />

    <TextView
        android:id="@+id/txt_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname_sale"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Sale" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_position"
        android:layout_marginTop="51dp"
        android:layout_toLeftOf="@+id/imgproduct"
        android:layout_toStartOf="@+id/imgproduct"
        android:text="เลขที่สัญญา" />

    <TextView
        android:id="@+id/txt_cnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/imgproduct"
        android:layout_alignRight="@+id/imgproduct"
        android:text="A0001" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="14dp"
        android:text="ลูกค้า" />

    <TextView
        android:id="@+id/txt_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/txt_cnumber"
        android:layout_alignStart="@+id/txt_cnumber"
        android:text="นาย ใจสั่งมา โอเย" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_status"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22"
        android:layout_marginBottom="15dp"
        android:text="วันแจ้งปัญหา" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignLeft="@+id/txtprice"
        android:layout_alignStart="@+id/txtprice"
        android:text="2017-05-10" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/link_login"
        android:layout_alignStart="@+id/link_login"
        android:layout_below="@+id/link_login"
        android:layout_marginTop="104dp"
        android:text="สถานะ" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignLeft="@+id/txtname"
        android:layout_alignStart="@+id/txtname"
        android:text="1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/selector_xml_btn_yellow"
        android:text="  แจ้งการแก้ไขปัญหา  " />

</RelativeLayout>
