<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="3dp"
    card_view:contentPadding="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text=". . ."
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/lbl_masseger"
            android:layout_toRightOf="@+id/lbl_masseger"
            android:layout_toEndOf="@+id/lbl_masseger" />

        <TextView
            android:id="@+id/lbl_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="status"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/lbl_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbl_name"
            android:layout_alignStart="@+id/lbl_name"
            android:layout_centerVertical="true"
            android:text="นาย อัสนี แหวนหล่อ"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/lbl_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="12:00:30"
            android:textColor="@color/bg_register"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/lbl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/VollyNetworkImageView1"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/VollyNetworkImageView1"
            android:layout_toRightOf="@+id/VollyNetworkImageView1"
            android:text="A0001"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/lblposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/VollyNetworkImageView1"
            android:layout_alignLeft="@+id/lbl_name"
            android:layout_alignStart="@+id/lbl_name"
            android:text="100"
            android:textColor="@color/gold"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbl_name"
            android:layout_alignBottom="@+id/lbl_name"
            android:layout_centerHorizontal="true"
            android:text="หัวข้อ"
            android:textColor="#040404"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/VollyNetworkImageView1"
            android:layout_width="75dp"
            android:layout_height="75dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/side_nav_bar"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/lbl_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbl_sale"
            android:layout_alignBottom="@+id/lbl_sale"
            android:layout_centerHorizontal="true"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/yellow"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/lbl_masseger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lblposition"
            android:layout_centerHorizontal="true"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/count"
            android:layout_width="20dip"
            android:layout_height="20dip"

            android:background="@drawable/bg_circle2"
            android:gravity="center"
            android:text="NEW"
            android:textColor="@android:color/white"
            android:textSize="8dp"
            android:layout_alignTop="@+id/VollyNetworkImageView1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

