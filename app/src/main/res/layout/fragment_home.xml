<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tsr.tsrproblemreport.fragment.HomeFragment"
    android:background="@color/colorAccent">
    <RelativeLayout





        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_header_bg"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/thumbnail_height"
            android:background="@color/blue"
            android:scaleType="fitXY"
            android:src="@drawable/picture4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignBottom="@+id/img_header_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_circle"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@android:drawable/sym_def_app_icon" />
        <TextView
            android:id="@+id/texttitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ตำแหน่ง"
            android:textColor="#808080"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/txtname_intro"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="WELCOME"
            android:layout_below="@+id/img_header_bg"
            android:layout_alignRight="@+id/texttitel"
            android:layout_alignEnd="@+id/texttitel" />

        <TextView
            android:id="@+id/txtname_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:text="นาย xxx xxxx\"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtposition_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="Sale"
            android:layout_below="@+id/txtname_intro"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="หัวหน้า"
            android:layout_below="@+id/txtposition_intro"
            android:layout_alignLeft="@+id/txtposition_intro"
            android:layout_alignStart="@+id/txtposition_intro" />

        <TextView
            android:id="@+id/boss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="TextView"
            android:layout_below="@+id/textView12"
            android:layout_alignRight="@+id/texttitel"
            android:layout_alignEnd="@+id/texttitel" />

        <TextView
            android:id="@+id/namegroub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="aaa"
            android:layout_below="@+id/boss"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>











</FrameLayout>
